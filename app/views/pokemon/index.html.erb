<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
        <div class="col-lg-12 mt-5">
          <% if flash[:alert] %>
            <div class="alert alert-warning"><%= flash[:alert] %></div>
          <% end %>
          <div class="mx-auto mt-5" style="width: 400px">
          <div class="form-group">
            <%= label_tag :number, 'Search for a Pokemon by Number '%>
            <%= text_field_tag :number, nil, placeholder: 'Eg. 1', class: 'form-control', required: true, type: 'number' %>
            
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>